<Window x:Class="AMS2ChEd.TeamSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Team" 
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#c41e3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d32f2f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DriverCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DriverCardSelectedStyle" TargetType="Border" BasedOn="{StaticResource DriverCardStyle}">
            <Setter Property="BorderBrush" Value="#c41e3a"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#0d0d0d" Margin="20">
            <TextBlock Text="SELECT TEAM" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Teams List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <ItemsControl x:Name="TeamsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,20">
                            <!-- Team Name -->
                            <TextBlock Text="{Binding TeamName}" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#c41e3a" 
                                      Margin="0,0,0,10"/>

                            <!-- Drivers Grid -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Driver 1 -->
                                <Border Grid.Column="0" 
                                        x:Name="Driver1Border"
                                        MouseLeftButtonDown="DriverCard_Click"
                                        Tag="{Binding Driver1}">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource DriverCardStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Driver1.Replaceable}" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                    <Setter Property="Background" Value="#1a1a1a"/>
                                                    <Setter Property="Cursor" Value="No"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="120">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="{Binding Driver1.Name}" 
                                                      FontSize="16" 
                                                      FontWeight="Bold" 
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Driver1.Nationality}" 
                                                      FontSize="12" 
                                                      Foreground="#aaaaaa"
                                                      Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding Driver1.Number, StringFormat='#{0}'}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold"
                                                      Foreground="#c41e3a"
                                                      Margin="0,5,0,0"/>
                                            <TextBlock FontSize="10" 
                                                      Foreground="#ff6666"
                                                      FontWeight="Bold"
                                                      Margin="0,5,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Driver1.Replaceable}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text" Value="NOT REPLACEABLE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Driver Photo Placeholder -->
                                        <Border Grid.Column="1" 
                                               Background="#1a1a1a" 
                                               Margin="10"
                                               CornerRadius="5">
                                            <TextBlock Text="PHOTO" 
                                                      FontSize="10" 
                                                      Foreground="#555555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Driver 2 -->
                                <Border Grid.Column="1" 
                                        x:Name="Driver2Border"
                                        MouseLeftButtonDown="DriverCard_Click"
                                        Tag="{Binding Driver2}">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource DriverCardStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Driver2.Replaceable}" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                    <Setter Property="Background" Value="#1a1a1a"/>
                                                    <Setter Property="Cursor" Value="No"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="120">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="15,0,0,0">
                                            <TextBlock Text="{Binding Driver2.Name}" 
                                                      FontSize="16" 
                                                      FontWeight="Bold" 
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Driver2.Nationality}" 
                                                      FontSize="12" 
                                                      Foreground="#aaaaaa"
                                                      Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding Driver2.Number, StringFormat='#{0}'}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold"
                                                      Foreground="#c41e3a"
                                                      Margin="0,5,0,0"/>
                                            <TextBlock FontSize="10" 
                                                      Foreground="#ff6666"
                                                      FontWeight="Bold"
                                                      Margin="0,5,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Driver2.Replaceable}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text" Value="NOT REPLACEABLE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Driver Photo Placeholder -->
                                        <Border Grid.Column="1" 
                                               Background="#1a1a1a" 
                                               Margin="10"
                                               CornerRadius="5">
                                            <TextBlock Text="PHOTO" 
                                                      FontSize="10" 
                                                      Foreground="#555555"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="20">
            <Button Content="CONFIRM" 
                    Width="150"
                    Margin="0,0,10,0"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ConfirmButton_Click"/>
            <Button Content="BACK" 
                    Width="150"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>