<Window x:Class="AMS2ChEd.Views.RaceWeekendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Race Weekend" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid>
        <!-- Semi-transparent dark overlay -->
        <Border Background="#CC3C3C3C" Margin="40">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock x:Name="GrandPrixHeader"
                               Text="MONACO GRAND PRIX 2024"
                               FontFamily="Arial"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock x:Name="CircuitHeader"
                               Text="CIRCUIT DE MONACO"
                               FontFamily="Arial"
                               FontSize="16"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Session Banner -->
                <Border Grid.Row="1" 
                        Background="#FFFF00"
                        Padding="10"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="CURRENT SESSION: "
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="Black"/>
                        <TextBlock x:Name="SessionText"
                                   Text="PRACTICE 1"
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="Black"/>
                    </StackPanel>
                </Border>

                <!-- Standings Table -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Column Headers -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <!-- Position -->
                                <ColumnDefinition Width="50"/>
                                <!-- Number -->
                                <ColumnDefinition Width="200"/>
                                <!-- Name -->
                                <ColumnDefinition Width="200"/>
                                <!-- Team -->
                                <ColumnDefinition Width="*"/>
                                <!-- Best Lap -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="P" 
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="5,0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="#"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="5,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="NAME"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="5,0"/>
                            <TextBlock Grid.Column="3" 
                                       Text="TEAM"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="5,0"/>
                            <TextBlock Grid.Column="4" 
                                       Text="BEST LAP"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="5,0"/>
                        </Grid>

                        <!-- Data Rows -->
                        <ItemsControl x:Name="StandingsItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Position in yellow box -->
                                        <Border Grid.Column="0"
                                                Background="#FFFF00"
                                                Width="30"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                Margin="5,0">
                                            <TextBlock Text="{Binding Position}"
                                                       FontFamily="Arial"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       Foreground="Black"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Number}"
                                                   FontFamily="Arial"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding DriverName}"
                                                   FontFamily="Arial"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding TeamName}"
                                                   FontFamily="Arial"
                                                   FontSize="15"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>

                                        <TextBlock Grid.Column="4" 
                                                   Text="{Binding BestLap}"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="{Binding LapTimeColor}"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Button -->
                <Button Grid.Row="3" 
                        Content="NEXT SESSION ▶"
                        Width="200"
                        Height="45"
                        FontFamily="Arial"
                        FontWeight="Bold"
                        FontSize="14"
                        Background="#FFFF00"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Cursor="Hand"
                        Click="NextSession_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
