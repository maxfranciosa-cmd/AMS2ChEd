<Window x:Class="AMS2ChEd.SeasonOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Season Overview" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a">

    <Window.Resources>
        <Style x:Key="NextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#c41e3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d32f2f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StandingItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style x:Key="PlayerStandingStyle" TargetType="Border" BasedOn="{StaticResource StandingItemStyle}">
            <Setter Property="Background" Value="#3a2a2a"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock x:Name="SeasonText" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="GO TO NEXT GP: " 
                           FontSize="18" 
                           Foreground="#aaaaaa"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="NextGPText" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#c41e3a"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Content="NEXT" 
                    Style="{StaticResource NextButtonStyle}"
                    Width="200"
                    Margin="0,20,0,0"
                    Click="NextButton_Click"/>
        </StackPanel>

        <!-- Standings Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Driver Standings -->
            <Border Grid.Column="0" 
                    Background="#0d0d0d" 
                    BorderBrush="#c41e3a" 
                    BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#c41e3a" 
                            Height="50">
                        <TextBlock Text="DRIVER STANDINGS" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Standings List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DriverStandingsItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="35">
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StandingItemStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlayer}" Value="True">
                                                        <Setter Property="Background" Value="#3a2a2a"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Margin="15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding Position, StringFormat='{}{0}.'}"
                                                      FontSize="14"
                                                      FontWeight="Bold"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding DriverName}"
                                                      FontSize="14"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Points, StringFormat='{}{0}pt'}"
                                                      FontSize="14"
                                                      Foreground="#aaaaaa"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Constructor Standings -->
            <Border Grid.Column="2" 
                    Background="#0d0d0d" 
                    BorderBrush="#c41e3a" 
                    BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#c41e3a" 
                            Height="50">
                        <TextBlock Text="CONSTRUCTORS" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Standings List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ConstructorStandingsItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="35">
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StandingItemStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPlayerTeam}" Value="True">
                                                        <Setter Property="Background" Value="#3a2a2a"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Margin="15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding Position, StringFormat='{}{0}.'}"
                                                      FontSize="14"
                                                      FontWeight="Bold"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding TeamName}"
                                                      FontSize="14"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Points, StringFormat='{}{0}pt'}"
                                                      FontSize="14"
                                                      Foreground="#aaaaaa"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>