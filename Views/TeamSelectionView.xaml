<Window x:Class="AMS2ChEd.Views.TeamSelectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMS2ChEd.Views"
        xmlns:vm="clr-namespace:AMS2ChEd.ViewModels"
        mc:Ignorable="d"
        Title="TeamSelectionView" Height="450" Width="800">

    <ScrollViewer>
        <StackPanel Margin="20,20,20,20">

            <ItemsControl ItemsSource="{Binding Teams}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,20">

                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Margin="5"
                                        Content="{Binding Driver1.Name}"
                                        Command="{Binding DataContext.SelectDriverCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Driver1}"
                                        IsEnabled="{Binding Driver1.IsSelectable}" />

                                <Button Grid.Column="1"
                                        Margin="5"
                                        Content="{Binding Driver2.Name}"
                                        Command="{Binding DataContext.SelectDriverCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Driver2}"
                                        IsEnabled="{Binding Driver2.IsSelectable}" />

                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Back"
                    Width="150"
                    HorizontalAlignment="Center"
                    Command="{Binding BackCommand}" />

        </StackPanel>
    </ScrollViewer>
</Window>
