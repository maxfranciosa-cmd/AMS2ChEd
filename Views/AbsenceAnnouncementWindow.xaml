<Window x:Class="AMS2ChEd.Views.AbsenceAnnouncementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Breaking News" 
        Height="800" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5dc"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2c2c2c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3c3c3c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                BorderBrush="#2c2c2c" 
                BorderThickness="3"
                Margin="30"
                CornerRadius="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="MOTORSPORT GAZETTE"
                               FontSize="32" 
                               FontWeight="Black" 
                               FontFamily="Times New Roman"
                               Foreground="#2c2c2c"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <Rectangle Height="3" Fill="#2c2c2c" Margin="0,0,0,5"/>
                    <Rectangle Height="1" Fill="#666666" Margin="0,0,0,5"/>

                    <TextBlock x:Name="DateText"
                               FontSize="11" 
                               FontFamily="Times New Roman"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Border Grid.Row="1" 
                        Background="#c41e3a" 
                        Padding="10,5"
                        Margin="0,0,0,15">
                    <TextBlock Text="BREAKING NEWS"
                               FontSize="14" 
                               FontWeight="Bold" 
                               FontFamily="Times New Roman"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               />
                </Border>

                <TextBlock x:Name="HeadlineText"
                           Grid.Row="2"
                           FontSize="26" 
                           FontWeight="Bold" 
                           FontFamily="Times New Roman"
                           Foreground="#2c2c2c"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <ScrollViewer Grid.Row="3" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,0">
                    <StackPanel>
                        <TextBlock x:Name="ArticleText"
                                   FontSize="14"
                                   FontFamily="Times New Roman"
                                   Foreground="#2c2c2c"
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   TextAlignment="Justify"/>

                        <Border x:Name="PlayerApplicationPanel"
                                Background="#f0f0f0"
                                BorderBrush="#c41e3a"
                                BorderThickness="2"
                                Padding="15"
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Would you like to apply for this position?"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           FontFamily="Times New Roman"
                                           Foreground="#2c2c2c"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <Button Content="YES"
                                            Style="{StaticResource ButtonStyle}"
                                            Background="#c41e3a"
                                            Width="100"
                                            Margin="0,0,10,0"
                                            Click="YesButton_Click"/>
                                    <Button Content="NO"
                                            Style="{StaticResource ButtonStyle}"
                                            Width="100"
                                            Click="NoButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Button x:Name="CloseButton"
                        Grid.Row="4"
                        Content="CLOSE"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Click="CloseButton_Click"
                        Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>