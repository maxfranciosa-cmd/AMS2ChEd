<Window x:Class="AMS2ChEd.Views.ListeningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Listening for Results" Height="500" Width="480" WindowStartupLocation="CenterOwner" >

    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="Listening for race results..." FontSize="16" FontWeight="SemiBold"/>
            <TextBlock x:Name="TxtSessionState" Text="Session state: Unknown" Margin="0,8,0,0" />
            <TextBlock x:Name="TxtSharedMemory" Text="Shared Memory: Disconnected" />
            <TextBlock x:Name="TxtGameState" Text="Game State: Unknown" />
            <TextBlock x:Name="TxtRaceState" Text="Race State: Unknown" />
            <TextBlock x:Name="TxtSessionFinished" Text="Session Finished: NO" />
            
            <ProgressBar IsIndeterminate="True" Height="8" Margin="0,12,0,0"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0"/>

            <StackPanel Margin="10">
                <TextBlock Text="Leaderboard:" Margin="0,10,0,0"/>
                <TextBlock x:Name="txtLeaderboard" FontFamily="Consolas"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
