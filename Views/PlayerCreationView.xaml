<Window x:Class="AMS2ChEd.Views.PlayerCreationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMS2ChEd.Views"
        xmlns:vm="clr-namespace:AMS2ChEd.ViewModels"
        mc:Ignorable="d" WindowStyle="ToolWindow"
        Title="PlayerCreationView" Height="450" Width="800" >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">

            <!-- Driver Name -->
            <TextBlock Text="Driver Name" Margin="0,0,0,5"/>
            <TextBox  Name="txtName" Margin="0,0,0,10"/>

            <!-- Nationality -->
            <TextBlock Text="Nationality" Margin="0,0,0,5"/>
            <TextBox  Name="txtNationality" Margin="0,0,0,10"/>

            <!-- Age -->
            <TextBlock Text="Age" Margin="0,0,0,5"/>
            <TextBox Name="txtAge" Margin="0,0,0,10" PreviewTextInput="txtAge_PreviewTextInput"/>

            <!-- Career Archetype -->
            <TextBlock Text="Career Archetype" Margin="0,0,0,5"/>
            <ComboBox Name="cbReputation"
                      Margin="0,0,0,10" DisplayMemberPath="Name" SelectionChanged="cbReputation_SelectionChanged" />

            <!-- Archetype Description -->
            <TextBlock Name="lbReputationDescription" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Back" Margin="0,0,10,0" Click="Button_Click_1"/>
                <Button Content="Next" Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
